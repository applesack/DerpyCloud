<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%red(%date{yyyy-MM-dd HH:mm:ss}) %highlight(%-5level) %boldMagenta(%-20logger{20}) %red([%thread]) >> %cyan(%msg%n)</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
